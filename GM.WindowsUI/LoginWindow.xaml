<Window x:Name="formLogin" x:Class="GM.WindowsUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GM.WindowsUI"
        mc:Ignorable="d"
        Title="GM / OnStar Login" Height="229.21" Width="346.009" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="306">
            <Label Content="Username" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtUsername" Height="23" TextWrapping="Wrap"/>
            <Label Content="Password" HorizontalAlignment="Center"/>
            <PasswordBox Height="23" x:Name="txtPassword"/>
            <Rectangle Height="37" Stroke="Black" Opacity="0"/>
            <Button x:Name="btnLogin" Content="Login" Height="36" Click="BtnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
